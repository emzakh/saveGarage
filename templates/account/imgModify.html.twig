{% extends 'base.html.twig' %}
{% block title %}Modifier image{% endblock %}

{% block body %}
    <div class="container">

       
        <h1>Modifier l'image de {{ app.user.email }}</h1>
        
        {% if app.user.picture != "" %}
        <img src="/uploads/{{ app.user.picture }}" alt="avatar de {{app.user.email}}">
        {% endif %}

        {{form_start(form)}}
            {{form_widget(form)}}
            <button type="submit" class="btn btn-success float-right">Modifier l'image</button>
        {{form_end(form)}}
    </div>

    {% endblock %}
{% block javascripts %}
     <script>
        $('.custom-file input').change(function (e) {
            var files = [];
            for (var i = 0; i < $(this)[0].files.length; i++) {
                files.push($(this)[0].files[i].name);
            }
            $(this).next('.custom-file-label').html(files.join(', '));
        });
    </script>
{% endblock %} 
