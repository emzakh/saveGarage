{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}
    <div class="container">
       <h1>Modification du profil</h1>
        {% if app.user.picture != "" %}
            <img src="/uploads/{{ app.user.picture }}" alt="avatar de {{app.user.email}}" style="width: 30%;height: 30%;object-fit:contain;">
        {% endif %}
        {{form_start(myForm)}}
            {{form_widget(myForm)}}
                <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
        {{form_end(myForm)}}

   
    </div>
{% endblock %} 